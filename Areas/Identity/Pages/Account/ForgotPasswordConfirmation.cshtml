@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Password Reset Confirmation";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .confirmation-container {
            max-width: 600px;
            margin: auto;
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #ffffff;
            margin-top: 40px;
            text-align: center;
        }

        .confirmation-title {
            color: #007bff;
            font-size: 28px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .confirmation-text {
            font-size: 20px;
            line-height: 1.5;
            margin-bottom: 30px;
        }

        .confirmation-button {
            width: 100%;
            max-width: 240px;
            padding: 12px 20px;
            font-size: 18px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="confirmation-container">
        <header class="confirmation-title">
            @ViewData["Title"]
        </header>
        <p class="confirmation-text">
            <strong>Success!</strong><br /> A password reset request has been submitted for your account.<br />
            Please check your registered email inbox for further instructions on how to reset your password.
        </p>
    </div>
</body>
</html>
